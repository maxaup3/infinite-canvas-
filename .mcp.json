      "args": [
        "-y",
        "figma-mcp"
      ],
      "env": {
        "FIGMA_PERSONAL_ACCESS_TOKEN": "YOUR_FIGMA_TOKEN_HERE"
      }
    },
    "superdesign": {
      "command": "node",
      "args": [
        "/Users/min/Downloads/claude的秘密基地/superdesign-mcp-claude-code/dist/index.js"
      ],
      "env": {}
    },
    "firecrawl": {
      "command": "npx",
      "args": [
        "-y",
        "firecrawl-mcp"
      ],
      "env": {
        "FIRECRAWL_API_KEY": "YOUR_API_KEY_HERE"
      }
    }
  }
}
